programa
{
	
	funcao inicio()
	{
		inteiro hrsAno = 365*24, minDcd = hrsAno*60*10, idd

			escreva ("qual a sua idade atual?","\n")
			leia (idd)

		inteiro iddSgd = idd*hrsAno*60*60, iddMlhAno = 977000000/60/60/24/365

			escreva ("Há ",hrsAno," horas em um ano,  ",minDcd," minutos em uma década, sua idade em segundos é igual a ",iddSgd,", e a idade de uma pessoa que viveu 977 milhões de segundos é ",iddMlhAno," anos")
	}
}
